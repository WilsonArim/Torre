{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Fortaleza Anti-Pattern",
  "type": "object",
  "required": ["id", "name", "smell", "fix_strategy", "minimal_patch_example"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "smell": { "type": "string", "description": "descrição curta do problema" },
    "detectors": {
      "type": "object",
      "properties": {
        "regex_hints": { "type": "array", "items": { "type": "string" } },
        "tools_hints": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "fix_strategy": { "type": "string", "description": "passos mínimos para corrigir" },
    "minimal_patch_example": { "type": "string", "description": "UM diff unificado ilustrativo" },
    "lenses_applied": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
